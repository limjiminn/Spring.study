<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.awesomejump.mapper.ProductMapper">

	<!-- 상품 전체 리스트 출력 -->
	<select id="selectProductAllList" resultType="shop.awesomejump.domain.ProductDTO">
		SELECT *
		FROM product
	</select>
	
	<!-- 상품 상세정보 -->
	<select id="selectProductDetail" resultType="shop.awesomejump.domain.ProductDTO">
		SELECT *
		FROM product
	</select>

	<!-- 상품 등록 
	
	<insert id="productInsert" parameterType="noticeBoard">
		INSERT INTO product  (
	        num, INDATE, IMG_PATH , TITLE, CONTENT, IMG_NAME, COURSE_CODE, READ_COUNT
	    )
		VALUES (
	        product_seq.NEXTVAL
	        , SYSDATE
	        , #{img_path}
	        , #{title}
	        , #{content}
	        , #{img_name}
	        , #{course_code}	
	        , 0
	    )
	</insert>
	
	-->

	<!-- 상품 삭제 -->
	<delete id="deleteProduct">
		DELETE FROM 	product
		WHERE 			num = #{num}
	</delete>
  
</mapper>
